{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "cpp build debug",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-std=c++11",
        "-Wall",
        "-g",
        "${workspaceFolder}/src/*.cpp",
        "-I ${workspaceFolder}/src/include",
        "-o",
        "${workspaceFolder}/build/debug/app"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": "build",
      "detail": "Task generated by Debugger."
    },
    {
      "type": "shell",
      "label": "compile cpp lib",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-std=c++11",
        "-Wall",
        "-c",
        "${workspaceFolder}/src/simple_thread.cpp",
        "-I ${workspaceFolder}/src/include",
        "-o",
        "${workspaceFolder}/build/debug/lib/simple_thread.o"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": "build",
      "detail": "Compile libs."
    },
    {
      "type": "shell",
      "label": "copy cpp libs to cprogram",
      "command": "bash",
      "args": [
        "-c",
        "cp ${workspaceFolder}/build/debug/app ${workspaceFolder}/cprogram/src/libs && cp ${workspaceFolder}/src/include/*.h ${workspaceFolder}/cprogram/src/libs/include"
      ],
      "group": "build",
      "problemMatcher": []
    },
    {
      "type": "cppbuild",
      "label": "cprogram build debug",
      // "dependsOn": ["compile cpp lib", "copy cpp libs to cprogram"],
      "dependsOrder": "sequence",
      "command": "/usr/bin/gcc",
      "args": [
        "-fdiagnostics-color=always",
        "-std=c11",
        "-g",
        "${workspaceFolder}/cprogram/src/*.c",
        "-I ${workspaceFolder}/cprogram/src/include",
        "-o",
        "${workspaceFolder}/cprogram/build/debug/capp"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": "build",

      "detail": "Task generated by Debugger."
    }
  ],
  "version": "2.0.0"
}